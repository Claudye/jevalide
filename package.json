{
  "name": "jevalide",
  "version": "0.0.1-dev.0",
  "description": "Jevalide is a user-friendly JavaScript library for data validation.",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "require": "./dist/index.mjs",
      "types": "./types/index.d.ts"
    }
  },
  "typings": "./types/index.d.ts",
  "files": [
    "./dist",
    "./types"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/Claudye/jevalide"
  },
  "docs": "https://github.com/Claudye/jevalide",
  "scripts": {
    "test": "jest --bail",
    "test-watch": "jest --watchAll",
    "dev": "vite",
    "build": "tsc && vite build",
    "build:watch": "tsc && vite build --watch",
    "preview": "vite preview",
    "lint": "eslint . --ext .ts",
    "format": "prettier --write ."
  },
  "keywords": [
    "Validation, Form validation, HTML form validator"
  ],
  "author": "Fassinou Claude (dev.claudy@gmail.com) and contributors",
  "license": "MIT",
  "devDependencies": {
    "@types/jest": "^29.5.14",
    "@typescript-eslint/eslint-plugin": "^7.10.0",
    "@typescript-eslint/parser": "^7.10.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.5.0",
    "prettier": "^3.2.5",
    "ts-jest": "^29.2.5",
    "ts-node": "^10.9.1",
    "typescript": "^5.4.5",
    "vite": "^4.3.2"
  },
  "dependencies": {
    "dayjs": "^1.11.7"
  }
}
